<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitcamp.java106.pms.dao.MemberDao">

  <resultMap type="Member" id="MemberMap">
    <id column="mno" property="no"/>
    <result column="name" property="name"/>
    <result column="email" property="email"/>
    <result column="pwd" property="password"/>
    <result column="bth" property="birthDate"/>
    <result column="gnd" property="gender"/>
    <result column="lctn" property="location"/>
    <result column="photo" property="photo"/>
    <result column="prfl" property="profile"/>
  </resultMap>
  
  <select id="selectList" 
          resultMap="MemberMap" parameterType="map">
    select mno, name, email, pwd, bth, gnd, lctn, photo, prfl 
    from test_member
    limit #{startRowNo}, #{pageSize}
  </select>
  
  <insert id="insert" parameterType="Member">
    insert into test_member 
    values(#{no},#{name},#{email},password(#{password}),#{birthDate},
    #{gender},#{location},#{photo},#{profile},)
  </insert>
  
  <select id="selectOne" parameterType="String" resultMap="MemberMap">
    select mno, name, email, pwd, bth, gnd, lctn, photo, prfl 
    from test_member
    where mno=#{no}
  </select>
  
  <select id="count" parameterType="map" resultType="int">
    select count(*)
    from test_member
    where mno=#{no} and pwd=password(#{password})
  </select>
  
  <select id="selectOneWithPassword" parameterType="map" resultMap="MemberMap">
    select mno, name, email, pwd, bth, gnd, lctn, photo, prfl 
    from test_member
    where mno=#{no} and pwd=password(#{password})
  </select>
  
  <update id="update" parameterType="Member">
    update test_member set 
        pwd=password(#{password}), 
        lctn=#{location},
        photo=#{photo},
        prfl=#{profile}
    where mno=#{no}
  </update>
  
  <delete id="delete" parameterType="String">
    delete from test_member where mno=#{value}
  </delete>
</mapper>







